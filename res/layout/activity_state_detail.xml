<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:gravity="center_horizontal" >
    
    <RelativeLayout
        android:id="@+id/title_RL"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:background="@color/title_bg_color" >

        <ImageButton
            android:id="@+id/back_imgbtn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_weight="6"
            android:text="到账状态"
            android:textColor="@color/white_text_color"
            android:textSize="22sp" />
    </RelativeLayout>
    
    <ImageView 
        android:id="@+id/state_iv"
        android:layout_width="wrap_content"
	    android:layout_height="280dp"
	    android:layout_below="@id/title_RL"
	    android:layout_marginTop="20dp"
	    android:layout_centerHorizontal="true"
	    android:background="@drawable/slqb_daozhangzhuangtai_hg"
        />
    <LinearLayout 
        android:id="@+id/daozhang_ll"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="20dp"
	    android:layout_below="@id/title_RL"
        >
        <TextView 
            android:id="@+id/time1_tv"
            android:layout_width="120dp"
	    	android:layout_height="wrap_content"
	    	android:gravity="right"
	    	android:paddingRight="30dp"
	    	android:text="预计 2014-09-30 09:09:08"
	    	android:textColor="@color/login_text_color"
	    	android:textSize="16sp"
	    	/>
         <TextView 
            android:id="@+id/time1_name_tv"
            android:layout_width="120dp"
	    	android:layout_height="wrap_content"
	    	android:paddingLeft="20dp"
	    	android:text="到账"
	    	android:textColor="@color/login_text_color"
	    	android:textSize="16sp"
	    	/>
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/zhongjian_ll"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="160dp"
	    android:layout_below="@id/title_RL"
        >
        <TextView 
            android:id="@+id/time2_tv"
            android:layout_width="120dp"
	    	android:layout_height="wrap_content"
	    	android:gravity="right"
	    	android:paddingRight="30dp"
	    	android:text="2014-09-26 09:09:08"
	    	android:textColor="@color/price_yellow"
	    	android:textSize="16sp"
	    	/>
        
         <TextView 
            android:id="@+id/time2_name_tv"
            android:layout_width="120dp"
	    	android:layout_height="wrap_content"
	    	android:paddingLeft="20dp"
	    	android:textColor="@color/price_yellow"
	    	android:textSize="16sp"
	    	android:text="银行处理中"/>
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/fukuan_ll"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="277dp"
	    android:layout_below="@id/title_RL"
        >
        <TextView 
            android:id="@+id/time3_tv"
            android:layout_width="120dp"
	    	android:layout_height="wrap_content"
	    	android:gravity="right"
	    	android:paddingRight="30dp"
	    	android:text="2014-09-24 09:09:08"
	    	android:textColor="@color/login_text_color"
	    	android:textSize="16sp"
	    	/>
         <TextView 
            android:id="@+id/time3_name_tv"
            android:layout_width="120dp"
	    	android:layout_height="wrap_content"
	    	android:paddingLeft="20dp"
	    	android:text="付款成功"
	    	android:textColor="@color/login_text_color"
	    	android:textSize="16sp"
	    	/>
    </LinearLayout>
    

</RelativeLayout>
