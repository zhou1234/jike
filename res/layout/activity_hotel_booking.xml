                    </TextView>

                    <com.jike.shanglv.Common.ClearEditText
                        android:id="@+id/chikaren_name_cet"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="40dp"
                        android:layout_toRightOf="@id/ruzhuren_tv10"
                        android:background="@null"
                        android:drawableRight="@drawable/delete_selector"
                        android:hint="请输入持卡人姓名"
                        android:singleLine="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/identificationType_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/deep_gray" />

                    <TextView
                        android:id="@+id/ruzhuren_tv11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="证件类型"
                        android:textColor="@color/black6"
                        android:textSize="18sp" >
                    </TextView>

                    <TextView
                        android:id="@+id/identificationType_tv"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/ruzhuren_tv11"
                        android:gravity="center_vertical"
                        android:text="身份证"
                        android:textColor="@color/blue_title_color"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/rightsmallarrow" >
                    </ImageView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/deep_gray" />

                    <TextView
                        android:id="@+id/ruzhuren_tv12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="证件号码"
                        android:textColor="@color/black6"
                        android:textSize="18sp" >
                    </TextView>

                    <com.jike.shanglv.Common.ClearEditText
                        android:id="@+id/creditCard_identificationNum_cet"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/ruzhuren_tv12"
                        android:background="@null"
                        android:drawableRight="@drawable/delete_selector"
                        android:hint="证件号码"
                        android:maxLength="18"
                        android:singleLine="true"
                        android:textSize="18sp" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/deep_gray" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottom_rl"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="#FF9A14"
        android:paddingLeft="10dp" >

        <TextView
            android:id="@+id/order_totalmoney_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="订单总额："
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/total_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/order_totalmoney_tv"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/commit_order_tv"
            android:layout_width="105dp"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#FF7D13"
            android:gravity="center"
            android:text="提交订单"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_above="@id/bottom_rl"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:background="@color/deep_gray" />

</RelativeLayout>