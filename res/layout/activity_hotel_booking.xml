                <ImageView
                    android:id="@+id/contact_person_phone_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/mobile_icon" />
