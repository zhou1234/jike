<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#efefef"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_title_rl"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/titile_bg" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="需求单"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp" >
        </TextView>

        <ImageButton
            android:id="@+id/back_imgbtn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/back" >
        </ImageButton>

        <ImageButton
            android:id="@+id/home_imgbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="#00000000"
            android:src="@drawable/home" >
        </ImageButton>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/top_title_rl"
        android:layout_marginBottom="61dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/button_margin"
                android:paddingRight="@dimen/button_margin" >

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="出发城市"
                    android:textColor="@color/black6"
                    android:textSize="20sp" >
                </TextView>

                <TextView
                    android:id="@+id/startCity_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上海"
                    android:textColor="@color/black"
                    android:textSize="20sp" >
                </TextView>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/button_margin"
                android:layout_marginRight="@dimen/button_margin"
                android:background="@color/deep_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/button_margin"
                android:paddingRight="@dimen/button_margin" >

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="到达城市"
                    android:textColor="@color/black6"
                    android:textSize="20sp" >
                </TextView>

                <TextView
                    android:id="@+id/arriveCity_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="纽约"
                    android:textColor="@color/black"
                    android:textSize="20sp" >
                </TextView>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/button_margin"
                android:layout_marginRight="@dimen/button_margin"
                android:background="@color/deep_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/button_margin"
                android:paddingRight="@dimen/button_margin" >

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="出发日期"
                    android:textColor="@color/black6"
                    android:textSize="20sp" >
                </TextView>

                <TextView
                    android:id="@+id/startDate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2014-08-25"
                    android:textColor="@color/black"
                    android:textSize="20sp" >
                </TextView>
            </LinearLayout>

            <View
                android:id="@+id/backDate_topLine"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/button_margin"
                android:layout_marginRight="@dimen/button_margin"
                android:background="@color/deep_gray" />

            <LinearLayout
                android:id="@+id/backDate_ll"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/button_margin"
                android:paddingRight="@dimen/button_margin" >

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="返程日期"
                    android:textColor="@color/black6"
                    android:textSize="20sp" >
                </TextView>

                <TextView
                    android:id="@+id/arriveDate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2014-09-01"
                    android:textColor="@color/black"
                    android:textSize="20sp" >
                </TextView>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/deep_gray" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginTop="15dp"
                android:background="@color/deep_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/button_margin"
                android:paddingRight="@dimen/button_margin" >

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="预算价格"
                    android:textColor="@color/black6"
                    android:textSize="20sp" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/price_yellow"
                    android:textSize="20sp" >
                </TextView>

                <EditText
                    android:id="@+id/budget_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLength="7"
                    android:background="@null"
                    android:hint="请输入预算价格"
                    android:inputType="number"
                    android:textColor="@color/price_yellow"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/rightsmallarrow" >
                </ImageView>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/button_margin"
                android:layout_marginRight="@dimen/button_margin"
                android:background="@color/deep_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/button_margin"
                android:paddingRight="@dimen/button_margin" >

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical|left"
                    android:text="备注信息"
                    android:textColor="@color/black6"
                    android:textSize="20sp" >
                </TextView>

                <EditText
                    android:id="@+id/remark_et"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="填写特殊需求"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/rightsmallarrow" >
                </ImageView>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/deep_gray" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginTop="15dp"
                android:background="@color/deep_gray" />

            <RelativeLayout
                android:id="@+id/add_passager_rl"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/list_item_color_bg"
                android:clickable="true"
                android:gravity="center_vertical"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/baoxiaopingzheng_icon_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/passengers_icon" />

                <TextView
                    android:id="@+id/add_passager_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/baoxiaopingzheng_icon_iv"
                    android:text="@string/add_passenger"
                    android:textColor="@color/black6"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/rightsmallarrow" />
            </RelativeLayout>

            <View
                android:id="@+id/passenger_head_divid_line"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/deep_gray"
                android:visibility="invisible" />
<!--  android:divider="@null" -->
            <ListView
                android:id="@+id/passenger_listview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
            </ListView>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/deep_gray" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginTop="15dp"
                android:background="@color/deep_gray" />

            <!-- 获取联系人电话 -->

            <RelativeLayout
                android:id="@+id/add_contact_person_phone_rl"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingLeft="@dimen/button_margin"
                android:paddingRight="@dimen/button_margin" >

                <ImageView
                    android:id="@+id/lianxiren_icon_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/contacts_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/lianxiren_icon_iv"
                    android:text="联系人电话"
                    android:textColor="@color/black6"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/contact_person_phone_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp"
                    android:background="@null"
                    android:hint="输入联系人电话"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="@color/huise_txt_color"
                    android:textSize="@dimen/booking_item_content_textsize" >
                </EditText>

                <ImageButton
                    android:id="@+id/lianxiren_icon_imgbtn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/contacts_phone_icon" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/deep_gray" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginTop="15dp"
                android:background="@color/deep_gray" />

            <RelativeLayout
                android:id="@+id/baoxian_rl"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/list_item_color_bg"
                android:clickable="true"
                android:gravity="center_vertical"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/baoxian_icon_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/invoices_icon" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/baoxian_icon_iv"
                    android:text="保 险"
                    android:textColor="@color/black"
                    android:textSize="@dimen/booking_item_title_textsize" />

                <ImageButton
                    android:id="@+id/baoxian_check_imgbtn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/checkmark_icon" />

                <TextView
                    android:id="@+id/baoxian_price_and_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="45dp"
                    android:gravity="right|center_vertical"
                    android:text="购买保险"
                    android:textColor="@color/price_yellow"
                    android:textSize="@dimen/booking_item_content_textsize" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginBottom="15dp"
                android:background="@color/deep_gray" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottom_rl"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/serchtype_bg"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/commit_button"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginRight="@dimen/button_margin"
            android:background="@drawable/btn_3"
            android:text="提交需求单"
            android:textColor="#FFF0F0F0"
            android:textSize="20sp" >
        </Button>
    </RelativeLayout>

</RelativeLayout>