<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/content_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_RL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/titile_bg" >

        <ImageButton
            android:id="@+id/back_imgbtn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_weight="6"
            android:text="我的账户"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:id="@+id/top_line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:background="@color/deep_gray" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/list_item_color_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/oldpsw_tv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="原密码"
            android:textColor="@color/black6"
            android:textSize="19sp" />

        <com.jike.shanglv.Common.ClearEditText
            android:id="@+id/oldpsw_cet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="90dp"
            android:background="@null"
            android:drawableRight="@drawable/delete_selector"
            android:hint="请输入原密码"
            android:maxLength="20"
            android:password="true"
            android:singleLine="true" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/deep_gray" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/list_item_color_bg"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/newpsw_tv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="新密码"
            android:textColor="@color/black6"
            android:textSize="18sp" />

        <com.jike.shanglv.Common.ClearEditText
            android:id="@+id/newpsw_cet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="90dp"
            android:background="@null"
            android:drawableRight="@drawable/delete_selector"
            android:hint="6-20位字母或数字"
            android:maxLength="20"
            android:password="true"
            android:singleLine="true" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/deep_gray" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/list_item_color_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/confirm_newpsw_tv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="确认密码"
            android:textColor="@color/item_gray"
            android:textSize="18sp" />

        <com.jike.shanglv.Common.ClearEditText
            android:id="@+id/confirmpsw_cet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="90dp"
            android:background="@null"
            android:drawableRight="@drawable/delete_selector"
            android:hint="再输入一遍新密码"
            android:maxLength="20"
            android:password="true"
            android:singleLine="true" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/deep_gray" />

    <Button
        android:id="@+id/ok_button"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginLeft="@dimen/button_margin"
        android:layout_marginRight="@dimen/button_margin"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_3"
        android:text="确认修改"
        android:textColor="#FFF0F0F0"
        android:textSize="20sp" >
    </Button>

</LinearLayout>