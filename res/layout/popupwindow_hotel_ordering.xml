<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/room_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="家庭房"
                android:textSize="19dp" />

            <Button
                android:id="@+id/close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/hotel_close" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/room_pic_iv"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:padding="5dp"
            android:background="@drawable/hotel_no_img" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:stretchColumns="*" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/floor_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="楼层    6、7、8层" />

                <TextView
                    android:id="@+id/area_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="面积    20平米" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp" >

                <TextView
                    android:id="@+id/breakfast_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="早餐    不含早" />

                <TextView
                    android:id="@+id/bedtype_tv"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="床型    双床，大床（1.8..." />
            </TableRow>
        </TableLayout>
        
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#FF9A14">
            <TextView
                android:id="@+id/order_totalmoney_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:textSize="18dp"
                android:text="订单总额：" />
            <TextView
                android:id="@+id/total_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/order_totalmoney_tv"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:textSize="18dp"
                android:text="￥3500" />
             <TextView
                android:id="@+id/commit_order_tv"
                android:layout_width="95dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textSize="20dp"
                android:text="预 定"
                android:background="#FF7D13"
                 />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>