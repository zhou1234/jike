<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#efefef"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/text_bg"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/titile_bg" >

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="找回密码"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp" >
        </TextView>

        <ImageButton
            android:id="@+id/back_imgbtn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/back" >
        </ImageButton>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="@color/deep_gray" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
       android:background="@drawable/list_item_color_bg"
        android:paddingLeft="@dimen/button_margin"
        android:paddingRight="@dimen/button_margin" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="用户名："
            android:gravity="center_vertical"
            android:textColor="@color/black6"
            android:textSize="18sp" >
        </TextView>

        <EditText
            android:id="@+id/username_input_et"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/register_input"
            android:hint="请输入用户名"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/deep_gray"
         />
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
       android:background="@drawable/list_item_color_bg"
        android:paddingLeft="@dimen/button_margin"
        android:paddingRight="@dimen/button_margin" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="手机号："
            android:gravity="center_vertical"
            android:textColor="@color/black6"
            android:textSize="18sp" >
        </TextView>

        <EditText
            android:id="@+id/phone_input_et"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:layout_centerVertical="true"
            android:background="@drawable/register_input"
            android:hint="请填写绑定的手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/deep_gray"
        />

    <RelativeLayout
        android:id="@+id/yanzhengma_rl"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/list_item_color_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/button_margin"
        android:paddingRight="@dimen/button_margin"
        android:paddingTop="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="验证码:"
            android:textColor="@color/black6"
            android:textSize="18sp" />

        <com.jike.shanglv.Common.ClearEditText
            android:id="@+id/yanzhengma_cet"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:drawableRight="@drawable/delete_selector"
            android:hint="输入验证码"
            android:maxLength="6"
            android:textSize="18sp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/get_yanzhengma_tv"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@id/yanzhengma_cet"
            android:text="获取验证码"
            android:textColor="@color/blue_title_color"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/deep_gray" />

    <Button
        android:id="@+id/retrieve_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginLeft="@dimen/button_margin"
        android:layout_marginRight="@dimen/button_margin"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_3"
        android:text="找回密码"
        android:textColor="#FFF0F0F0"
        android:textSize="20sp" >
    </Button>

</LinearLayout>